<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.junefw.infra.modules.store.StoreMpp">

    <resultMap id="resultMapObj" type="com.junefw.infra.modules.store.Store"></resultMap>
	<select id="selectOneCount" resultType="Integer">
			SELECT 
				count(*)
			FROM
				StoreMenu
			WHERE 1=1
	</select>
	
	<insert id="insert">
			INSERT INTO storeInfo (
			stifSeq
			,stifName
			,stifDesc
			,stifAddress1
			,stifAddress2
			,stifOC
			,stifFoodTypeCd
			,regDateTime
			,modDateTime
			) VALUES (
			#{stifSeq}
			,#{stifName}
			,#{stifDesc}
			,#{stifAddress1}
			,#{stifAddress2}
			,#{stifOC}
			,#{stifFoodTypeCd}
			,#{regDateTime}
			,#{modDateTime}
			);
			
			<selectKey resultType="String" keyProperty="stifSeq" order="AFTER">		<!-- 파생테이블 seq값을 넣을 수 있도록 해준다 -->
			SELECT last_insert_id()
			</selectKey>
	</insert>
	
	<insert id="insertStoreTel">
		INSERT INTO storeTel (
			stphDelNy
			,stphNumberTypeCd
			,stphNumber
			,regDateTime
			,modDateTime
			,StoreInfo_stifSeq
		) VALUES (
			 0
			,#{stphNumberTypeCd}
			,#{stphNumber}
			,#{regDateTime}
			,#{modDateTime}
			,#{stifSeq}
		)
	</insert>
	<insert id="insertStoreLocation">
	INSERT INTO storeLocation (
		stlcDelNy
		,stlcName
		,stlcIat
		,stlcIng
		,regDateTime
		,modDateTime
		,StoreInfo_stifSeq
	) VALUES (
		0
		,#{stifName}
		,#{stlcIat}
		,#{stlcIng}
		,#{regDateTime}
		,#{modDateTime}
		,#{stifSeq}
	)
	</insert>
	<insert id="insertStoreMenu">
	INSERT INTO StoreMenu (
		 stmnSeq
		,stmnName
		,stmnPrice
		,stmnDelNy
		,regDateTime
		,modDateTime
		,StoreInfo_stifSeq
	) VALUES (
		#{stmnSeq}
		,#{stmnName}
		,#{stmnPrice}
		,0
		,#{regDateTime}
		,#{modDateTime}
		,#{stifSeq}
	)
	</insert>
	
	<insert id="insertUploaded">
		INSERT INTO ${tableName} (
			type
			,defaultNy
			,sort
			,originalName
			,uuidName
			,ext
			,size
			,delNy
			,pseq
		) values (
			#{type}
			,#{defaultNy}
			,#{sort}
			,#{originalName}
			,#{uuidName}
			,#{ext}
			,#{size}
			,0
			,#{pseq}
		)
	</insert>
</mapper>