	<!-- <select id="selectOneCount" resultType="Integer">
			SELECT 
				count(*)
			<include refid="selectCommon"/>
	</select> -->
	<select id="selectOneCount" resultType="Integer">
			SELECT 
				count(*)
			FROM
				StoreMenu
			WHERE 1=1
	</select>
	
	<insert id="insert">
			INSERT INTO storeInfo (
			stifSeq
			,stifName
			,stifDesc
			,stifAddress1
			,stifAddress2
			,stifOC
			,stifFoodTypeCd
			,regDateTime
			,modDateTime
			) VALUES (
			#{stifSeq}
			,#{stifName}
			,#{stifDesc}
			,#{stifAddress1}
			,#{stifAddress2}
			,#{stifOC}
			,#{stifFoodTypeCd}
			,#{regDateTime}
			,#{modDateTime}
			);
			
			<selectKey resultType="String" keyProperty="stifSeq" order="AFTER">		<!-- 파생테이블 seq값을 넣을 수 있도록 해준다 -->
			SELECT last_insert_id()
			</selectKey>
	</insert>
	
	<insert id="insertStoreTel">
		INSERT INTO storeTel (
			stphDelNy
			,stphNumberTypeCd
			,stphNumber
			,regDateTime
			,modDateTime
			,StoreInfo_stifSeq
		) VALUES (
			 0
			,#{stphNumberTypeCd}
			,#{stphNumber}
			,#{regDateTime}
			,#{modDateTime}
			,#{stifSeq}
		)
	</insert>
	<insert id="insertStoreLocation">
	INSERT INTO storeLocation (
		stlcDelNy
		,stlcName
		,stlcIat
		,stlcIng
		,regDateTime
		,modDateTime
		,StoreInfo_stifSeq
	) VALUES (
		0
		,#{stifName}
		,#{stlcIat}
		,#{stlcIng}
		,#{regDateTime}
		,#{modDateTime}
		,#{stifSeq}
	)
	</insert>
	<insert id="insertStoreMenu">
	INSERT INTO StoreMenu (
		 stmnSeq
		,stmnName
		,stmnPrice
		,stmnDelNy
		,regDateTime
		,modDateTime
		,StoreInfo_stifSeq
	) VALUES (
		#{stmnSeq}
		,#{stmnName}
		,#{stmnPrice}
		,0
		,#{regDateTime}
		,#{modDateTime}
		,#{stifSeq}
	)
	</insert>
</mapper>