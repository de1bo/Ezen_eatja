	<insert id="insert">
			INSERT INTO infrMember (
			stifSeq
			,stifName
			,stifDesc
			,stifAddress1
			,stifAddress2
			,stifOC
			,stifFoodTypeCd
			,regDateTime
			,modDateTime
			) VALUES (
			#{stifSeq}
			,#{stifName}
			,#{stifDesc}
			,#{stifAddress1}
			,#{stifAddress2}
			,#{stifOC}
			,#{stifFoodTypeCd}
			,#{regDateTime}
			,#{modDateTime}
			);
			<selectKey resultType="String" keyProperty="seq" order="AFTER">
			SELECT last_insert_id()
			</selectKey>
	</insert>
	
	<insert id="insertStoreTel">
